<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/draw_view"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/undo"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNDO" />

        <Button
            android:id="@+id/redo"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REDO"/>


        <Button
            android:id="@+id/select_pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PEN" />

        <Button
            android:id="@+id/select_eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ERASER"/>

        <Button
            android:id="@+id/select_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLEAR" />

        <Button
            android:id="@+id/select_rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECTANGLE" />

        <Button
            android:id="@+id/select_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CIRCLE"/>

        <Button
            android:id="@+id/select_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLUE" />

        <Button
            android:id="@+id/select_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLACK" />

        <Button
            android:id="@+id/double_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOUBLE WIDTH" />

        <Button
            android:id="@+id/halve_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HALVE WIDTH"/>

        <Button
            android:id="@+id/halve_opacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HALVE OPACITY" />

        <Button
            android:id="@+id/select_fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEELCT SCENE" />
    </LinearLayout>

    <com.mrmeta.drawingboardview.DrawingBoardView
        android:id="@+id/draw_view"
        android:layout_width="600dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@+id/buttons"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>